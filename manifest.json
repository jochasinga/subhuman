{
  "name": "Homeward",
  "version": "0.0.1",
  "description": "Orchestrate DOS attack on tracking pixels",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "<all_urls>",
    "tabs",
    "activeTab",
    "declarativeContent",
    "storage"
  ],
  "options_page": "options.html",
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "run_at": "document_end",
      "matches": ["*://*/*"],
      "css": ["css/content.css"],
      "js": ["contentScript.js"]
    }
  ],
  "browser_action": {
    "default_title": "Subhuman: Track pixel tracker in your browser",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/logo_16.png",
      "32": "images/logo_32.png",
      "48": "images/logo_48.png",
      "128": "images/logo_128.png"
    }
  },
  "icons": {
    "16": "images/logo_16.png",
    "32": "images/logo_32.png",
    "48": "images/logo_48.png",
    "128": "images/logo_128.png"
  },
  "manifest_version": 2,
  "web_accessible_resources": ["images/drone.png"]
}
